<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:700,600" rel="stylesheet" type="text/css">
    <style>
        body {
            font-family: 'Open Sans', sans-serif;
            margin-top: 10em;
            text-align: center;
            background: linear-gradient(to right, #b92b27, #1565c0) !important;
        }

        p {
            font-size: 12px;
            text-decoration: none;
            color: #ffffff;
        }

        h1 {
            font-size: 1.5em;
            color: #525252;
            padding: 1em;
        }

        .box {
            background: #e0f0ea;
            width: 350px;
            border-radius: 6px;
            margin: 0 auto 0 auto;
            padding: 0px 0px 70px 0px;
            border: #2980b9 4px solid;
        }

        .email {
            background: #e0f0ea;
            border: #ccc 1px solid;
            border-bottom: #ccc 2px solid;
            padding: 8px;
            width: 220px;
            color: #574f7d;
            margin-top: 10px;
            font-size: 1em;
            border-radius: 4px;
        }



        .btn {
            background: #95adbe;
            width: 125px;
            padding-top: 5px;
            padding-bottom: 5px;
            color: white;
            border-radius: 4px;
            border: #27ae60 1px solid;
            margin-top: 20px;
            margin-bottom: 20px;
            font-weight: 800;
            font-size: 0.8em;
        }

        .btn:hover {
            background: #2CC06B;
        }

        .btn:disabled,
        .btn[disabled] {

            display: none;
        }

        .btn2 {
            float: left;
            background: #3498db;
            width: 125px;
            padding-top: 8px;
            padding-bottom: 8px;
            color: white;
            border-radius: 4px;
            border: #2980b9 1px solid;
            margin-top: 20px;
            margin-bottom: 20px;
            font-weight: 800;
            font-size: 0.8em;
        }

        .btn2:hover {
            background: #3594D2;
        }

        a {
            color: inherit;
            text-decoration: none;
        }
    </style>
</head>

<body class="">

    <div class="box" >
        <h1>Enter Username</h1>
        <form action="/login" method="post" >
            <input class="email" type="text" placeholder="username" id="input" name="username"  />
            <button class="btn mx-auto " type="submit" onclick="userSet()" id="change-btn">change</button>
            <button class="btn mx-auto "><a href="/">go to home page</a></button>
        </form>
    </div> <!-- End Box -->


    <script>
        if (localStorage.getItem("user-name") != undefined) {
            let h1 = document.querySelector("h1");
            h1.innerHTML = "your current username is " + localStorage.getItem("user-name") + ". now go to home page.";
            let btn = document.getElementById("change-btn");
          //  btn.disabled = true;
        }


        function userSet() {
            const validUser = function (userInfo) {
                let userId = userInfo.trim();
                if (
                    userId === "" ||
                    userId === null ||
                    userId === undefined ||
                    userId === "undefined" ||
                    userId.length > 15
                ) {
                    let mat = Math.floor(Math.random() * 10) + 1;
                    let str = Math.random().toString(36).substr(2, 3);
                    return `user-${mat}${str}`;
                } else {
                    return userInfo;
                }
            };

            let usr = document.getElementById("input").value;
            let username = validUser(usr);
            localStorage.setItem("user-name", username);
            let h1 = document.querySelector("h1");
            h1.innerHTML = "your new username is " + username + ". now go to home page.";
        }
    </script>
</body>

</html>